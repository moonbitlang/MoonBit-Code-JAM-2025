  assert_exp2_ulp(-1, 0.5)
  assert_exp2_ulp(0, 1)
  assert_exp2_ulp(-0, 1)
  assert_exp2_ulp(@double.not_a_number, @double.not_a_number)
  assert_exp2_ulp(@double.infinity, @double.infinity)
  assert_exp2_ulp(@double.neg_infinity, 0)
}
